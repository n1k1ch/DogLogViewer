@require(vars)
@require(typography)

h1
	color: #EF8C23;

body
	margin-top 69px
	background-color: #333;
	color: color-white
	font-size base-font-size;

table.logEntries
	th
		cursor pointer;
	tr.warning
		color: #333;
	tr.danger
		color: #333;
.sorting
	cursor pointer;

.table-head
	div
		&:hover
			-webkit-box-shadow: inset 0px 20px 10px -4px rgba(119,119,119,1);
			-moz-box-shadow: inset 0px 20px 10px -4px rgba(119,119,119,1);
			box-shadow: inset 0px 20px 10px -4px rgba(119,119,119,1);
		padding padding padding * 2
		font-size 120%;
		line-height 150%;
		i
			height 100%
			margin-left 10px
.data-row
	// border-bottom: 1px solid color-white
	border-left: 5px solid color-orange
	border-right: 5px solid color-orange
	padding: padding 0;
	@media(max-width: 991px)
		border-right none
		border-bottom: 1px solid color-white	
	.logDate,.logTime
		font-family digital-7regular
	.logTime
		font-size 150%
		color color-orange
	.logSever,.logType
		font-size 200%
		color color-gray
		
	&.danger
		border-left 15px solid color-red
		border-right: 15px solid color-red
		color #fff
		.logSever,.logType
			color color-red
		.logTime
			color color-red
		.logMsg
			color color-red
			@media(max-width: 991px)
				border-left 5px solid color-red
	&.warning
		border-left 15px solid color-yellow
		border-right: 15px solid color-yellow
		color #eee
		.logSever,.logType
			color color-yellow
		.logTime
			color color-yellow
		.logMsg
			color color-yellow
			@media(max-width: 991px)
				border-left 5px solid color-yellow
	.logMsg
		word-wrap break-word
		background-color #777
		border-radius 5px
		padding padding padding * 2
		
		@media(max-width: 991px)
			border-top-left-radius 20px
			border-bottom-left-radius 20px
			border-left 5px solid color-orange
		
